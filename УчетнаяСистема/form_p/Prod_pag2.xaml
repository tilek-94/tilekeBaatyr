<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:col="clr-namespace:System.Collections;assembly=mscorlib" 
      xmlns:local="clr-namespace:УчетнаяСистема"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="УчетнаяСистема.form_p.Prod_pag2"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1300"
      Title="Prod_pag2" Loaded="Page_Loaded">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="89*"/>
        </Grid.RowDefinitions>

        <Canvas Grid.Row="0">
            <TextBox x:Name="FIO" FontSize="14" 
                     Style="{DynamicResource textbox_style}" 
                     Tag=" Ф.И.О" Height="24" Width="208" 
                     HorizontalAlignment="Right" Canvas.Left="117" Canvas.Top="36"/>
            <Label Content="Клиент" Canvas.Left="35" Canvas.Top="34" FontSize="13" />
            <Label Content="Договор" Canvas.Left="36" Canvas.Top="128" FontSize="13" />
            <TextBox x:Name="textbox_dogovor" FontSize="14"  
                     Style="{DynamicResource textbox_style}"
                     Tag=" Договор" Height="24" Width="201" HorizontalAlignment="Right" Canvas.Left="119" Canvas.Top="130"/>
            <Label Content="Доллар за 1кв. м." Canvas.Left="377" Canvas.Top="63" FontSize="13" />
            <TextBox x:Name="textbox_cars" FontSize="14"  Style="{DynamicResource textbox_style}"
                     Tag=" Машина" Height="24" Width="203" HorizontalAlignment="Right" Canvas.Left="119" Canvas.Top="97"/>
            <Label Content="Квартира" Canvas.Left="36" Canvas.Top="64" FontSize="13" />
            <Label Content="Машина" Canvas.Left="35" Canvas.Top="98" FontSize="13" />
            <Button Style="{DynamicResource Button_blue}" Content="Продать"
                    x:Name="registr_client_btn"
                        Click="registr_client_btn_Click"
                        Canvas.Left="387" Canvas.Top="171" Width="168" Height="26" RenderTransformOrigin="0.494,-0.221"/>
            <Button Style="{DynamicResource Button_blue}" Content=""
                x:Name="show_client_btn"
                Click="show_client_btn_Click"
                Canvas.Left="333" Canvas.Top="34" Width="32" Height="26"/>
            <ComboBox Width="203" Canvas.Left="119" Canvas.Top="68" 
                      x:Name="ComboBox2"  IsEditable="True" Height="22"
                      DropDownClosed="ComboBox2_DropDownClosed"
                      />

            <Label Content="Курс валюта" Canvas.Left="398" Canvas.Top="94" FontSize="13" />
            <Button Style="{DynamicResource Button_blue}" Content=""
                x:Name="show_client_Cars"
                Click="show_client_Cars_Click"
                Canvas.Left="332" Canvas.Top="96" Width="32" Height="26"/>
            <Label Content="Сом за 1кв. м." Canvas.Left="382" Canvas.Top="125" FontSize="13" />

            <Label x:Name="label_kvm"
                   BorderBrush="#FFABADB3"
                   BorderThickness="1"
                   Content="" Height="27" Canvas.Left="485" Canvas.Top="29" Width="208"/>
            <Label Content="Кв. м." Canvas.Left="407" Canvas.Top="31" FontSize="13" />
            <TextBox x:Name="textbox_Dol" FontSize="14"  Style="{DynamicResource textbox_style}"
                Tag=" Доллар" Height="24" Width="203" HorizontalAlignment="Right" Canvas.Left="487" Canvas.Top="64"/>
            <TextBox x:Name="textbox_kurs" FontSize="14" 
                     Style="{DynamicResource textbox_style}"
                Tag=" Кур валюта" Height="24" Width="203" 
                     HorizontalAlignment="Right" KeyUp="textbox_kurs_KeyUp"
                     Canvas.Left="488" Canvas.Top="96"/>
            <TextBox x:Name="textbox_Som" FontSize="14"  Style="{DynamicResource textbox_style}"
                Tag=" Сом" Height="24" Width="203" HorizontalAlignment="Right" Canvas.Left="488" Canvas.Top="126"/>
            <Label x:Name="label_summ_Dol"
                BorderBrush="#FFABADB3"
                BorderThickness="1"
                Content="" Height="26" Canvas.Left="726" Canvas.Top="44" Width="208"/>
            <Label x:Name="label_summ_Som"
                BorderBrush="#FFABADB3"
                BorderThickness="1"
                Content="" Height="26" Canvas.Left="726" Canvas.Top="89" Width="208"/>
            <Label Content="Сумма долларах" Canvas.Left="726" Canvas.Top="21" FontSize="13" />
            <Label Content="Сумма сомах" Canvas.Left="726" Canvas.Top="66" FontSize="13" />
            <Calendar x:Name="Calendar1" Canvas.Left="955" Canvas.Top="20"
                      SelectedDatesChanged="Calendar_SelectedDatesChanged"
                      Foreground="#FF004EF5" Background="{x:Null}" BorderBrush="#FF478EE4" />
            <Calendar Canvas.Left="1145" Canvas.Top="20" Foreground="#FF004EF5"
                      x:Name="Calendar2" SelectedDatesChanged="Calendar2_SelectedDatesChanged"
                      Background="{x:Null}" BorderBrush="#FF478EE4"/>
            <Label x:Name="label_summ_Dol_itog"
                Content="" Height="35" Canvas.Left="891" 
                   Canvas.Top="196" Width="144" FontWeight="Bold" FontSize="14"/>
            <Label x:Name="label_summ_Som_itog"
                   FontSize="14"
                Content="" Height="35" Canvas.Left="1135" Canvas.Top="194" Width="208" FontWeight="Bold"/>
            <Label Content="Итого долларах." Canvas.Left="777" Canvas.Top="193" FontSize="13" />
            <Label Content="Итого сомах." Canvas.Left="1036" Canvas.Top="193" FontSize="13" />
            <Label x:Name="label_summ_Cars"
                BorderBrush="#FFABADB3"
                BorderThickness="1"
                Content="" Height="26" Canvas.Left="727" Canvas.Top="137" Width="208"/>
            <Label Content="Цена машина долларах" Canvas.Left="726" Canvas.Top="112" FontSize="13" />


        </Canvas>



        <Border Grid.Row="1" Padding="5" Background="#F4F4F4" Grid.RowSpan="2">
            <StackPanel  Background="White" >
                <DockPanel HorizontalAlignment="Stretch" Background="#F4F4F4">
                    <Label Content="Продажа" FontSize="16" Foreground="#00C3FF" />
                    <TextBox FontSize="14"  Style="{DynamicResource placeHolder}" Tag=" Поиск данные" Height="25" Width="200" Margin="5" HorizontalAlignment="Right"/>
                </DockPanel>
                <DataGrid FontSize="12"  Style="{DynamicResource grid_xml}" 
                  HeadersVisibility="Column"
                  
                  ColumnHeaderStyle="{DynamicResource hederstyle}" x:Name="dataGridView1"  MouseDown="DataGrid_MouseDown" MouseDoubleClick="dataGridView1_MouseDoubleClick"/>
            </StackPanel>
        </Border>

    </Grid>
</Page>
