            <Label Content="Адресс" Canvas.Left="339" Canvas.Top="155" FontSize="13" />
            <TextBox FontSize="14"  Style="{DynamicResource textbox_style}" Tag=" Адресс" Height="73" Width="254" HorizontalAlignment="Right" Canvas.Left="423" Canvas.Top="156"/>
            <Label Content="Дата рож." Canvas.Left="337" Canvas.Top="57" FontSize="13" />
            <DatePicker Style="{DynamicResource styleDatePicker}" Canvas.Left="422" Canvas.Top="58" Width="252" Height="24"/>
            <Label Content="AN" Canvas.Left="339" Canvas.Top="124" FontSize="13" />
            <Button Style="{DynamicResource Button_blue}" Content="Сохранить"
                    x:Name="button" Canvas.Left="656" Canvas.Top="265" Width="168" Height="26"/>
            <Button Style="{DynamicResource Button_White}" Content="Отмена"
                    x:Name="button2" Canvas.Left="463" Canvas.Top="266" Width="168" Height="25"/>
            <TextBox FontSize="14"  Style="{DynamicResource textbox_style}" Tag=" Ф.И.О" Height="24" Width="254" HorizontalAlignment="Right" Canvas.Left="801" Canvas.Top="32"/>
            <Label Content="Ф.И.О" Canvas.Left="719" Canvas.Top="31" FontSize="13" />
