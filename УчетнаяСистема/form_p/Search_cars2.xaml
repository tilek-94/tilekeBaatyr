            <Label Content="Адресс" Canvas.Left="718" Canvas.Top="162" FontSize="13" />
            <TextBox FontSize="14"  Style="{DynamicResource textbox_style}" Tag=" Адресс" Height="73" Width="254" HorizontalAlignment="Right" Canvas.Left="802" Canvas.Top="163"/>
            <Label Content="Дата рож." Canvas.Left="716" Canvas.Top="64" FontSize="13" />
            <DatePicker Style="{DynamicResource styleDatePicker}" Canvas.Left="801" Canvas.Top="65" Width="252" Height="24"/>
