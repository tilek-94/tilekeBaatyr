<Window x:Class="УчетнаяСистема.form_p.Cars_pag"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:УчетнаяСистема" 
      xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="620" d:DesignWidth="1100"
      Title="Cars_pag" Loaded="Page_Loaded">

    <Grid Background="White">
        
        <Border Grid.Column="1" Padding="5" Background="#F4F4F4">
            <StackPanel  Background="White" >
                <DockPanel HorizontalAlignment="Stretch" Background="#F4F4F4">
                    <Label Content="KG Group Компаниясы" FontSize="16" Foreground="#00C3FF" ></Label>
                    <TextBox FontSize="14"  Style="{DynamicResource placeHolder}" Tag=" Поиск данные" Height="25" Width="200" Margin="5" HorizontalAlignment="Right">

                    </TextBox>
                </DockPanel>
                <DataGrid FontSize="12"  Style="{DynamicResource grid_xml}" AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  ColumnHeaderStyle="{DynamicResource hederstyle}" 
                         x:Name="dataGridView1"
                          CanUserAddRows="False"
                          ItemsSource="{Binding}"
                          >

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№" Binding="{Binding id}" />
                        <DataGridTextColumn Header="Марка" Binding="{Binding marka}" />
                        <DataGridTextColumn Header="Номер машины" Binding="{Binding nomer}" />
                        <DataGridTextColumn Header="Дата" Binding="{Binding data}" />
                        <DataGridTextColumn Header="Цена на долларах" Binding="{Binding prih_summ}" />
                        <DataGridTextColumn Header="Курс валюта" Binding="{Binding kurs}" />
                    </DataGrid.Columns>


                    <DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <Grid Grid.Row="1" Background="White" Height="200">
                                <Image DockPanel.Dock="Left" Width="150" Height="120" Source="/УчетнаяСистема;component/images/foto_people/unnamed.png" Margin="27,24,910,168" />
                                <Grid Margin="0,10,2,80">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBox x:Name="marka" FontSize="14"  Style="{DynamicResource textbox_style}" Tag=" Машина марка" Width="254" HorizontalAlignment="Right" Grid.Column="1" Margin="0,13,540,-35" Grid.Row="2"/>
                                    <Label Content="Машина марка" FontSize="13" Grid.Column="1" Margin="194,12,790,-38" Grid.Row="2" />
                                    <TextBox x:Name="nomer" FontSize="14"  Style="{DynamicResource textbox_style}" Tag=" Номер машина" Width="250" HorizontalAlignment="Right" Grid.Column="1" Margin="0,79,546,-101" Grid.Row="2"/>
                                    <Label Content="Номер машина" FontSize="13" Grid.Column="1" Margin="192,80,794,-106" Grid.Row="2" />
                                    <TextBox x:Name="prih_summ" FontSize="14"  Style="{DynamicResource textbox_style}" Tag=" Приход в сумме (Доллар)" Width="232" HorizontalAlignment="Right" Grid.Column="1" Margin="0,13,176,-35" Grid.Row="2"/>
                                    <Label Content="Курс валюта" FontSize="13" Grid.Column="1" Margin="570,41,394,-68" Grid.Row="2" />
                                    <TextBox x:Name="kurs" FontSize="14"  Style="{DynamicResource textbox_style}" Tag=" Курс валюта" Width="126" HorizontalAlignment="Right" Grid.Column="1" Margin="0,47,280,-69" Grid.Row="2"/>
                                    <Label Content="Дата" FontSize="13" Grid.Column="1" Margin="194,45,606,-72" Grid.Row="2" />
                                    <DatePicker x:Name="data" Style="{DynamicResource styleDatePicker}" Grid.Column="1" Margin="296,46,546,-70" Grid.Row="2"/>
                                    <Label Content="Приход в сумме" FontSize="13" Grid.Column="1" Margin="568,10,386,-36" Grid.Row="2" />
                                    <TextBox x:Name="info" FontSize="14"  Style="{DynamicResource textbox_style}" Tag=" Адресс" Width="254" HorizontalAlignment="Right" Grid.Column="1" Margin="0,115,544,-187" Grid.Row="2"/>
                                    <TextBox FontSize="14"  Style="{DynamicResource textbox_style}" Tag=" Приход в сумме (Сом)" Width="232" HorizontalAlignment="Right" Grid.Column="1" Margin="0,79,174,-101" Grid.Row="2"/>
                                    <Label Content="Приход в сумме" FontSize="13" Grid.Column="1" Margin="570,76,386,-102" Grid.Row="2" />

                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>


                </DataGrid>
            </StackPanel>
        </Border>

        
    </Grid>
</Window>
